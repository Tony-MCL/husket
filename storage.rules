// ===============================
// storage.rules
// Husket Sky v1 – LÅST kontrakt
// ===============================

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAuthed() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthed() && request.auth.uid == uid;
    }

    // -------------------------------
    // Egen husket storage
    // storage/users/{uid}/huskets/{husketId}.jpg
    // -------------------------------
    match /users/{uid}/huskets/{fileName} {
      allow read, write: if isOwner(uid);
    }

    // -------------------------------
    // Relay storage
    // storage/relay/{recipientUid}/{relayId}.jpg
    // -------------------------------
    match /relay/{recipientUid}/{fileName} {
      allow read, write: if false;
    }
  }
}
